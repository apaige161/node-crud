<h1>A CRUDy Web App</h1>
<section class="insert">
    <h3>Insert Data</h3>
    <!-- POST new data by rerouting to the /insert route, method: post -->
    <form action="/insert" method="post">
        <div class="input">
            <label for="title">Title</label>
            <input type="text" id="title" name="title">
        </div>
        <div class="input">
            <label for="content">Content</label>
            <input type="text" id="content" name="content">
        </div>
        <div class="input">
            <label for="author">Author</label>
            <input type="text" id="author" name="author">
        </div>
        <!-- submit the GET request -->
        <button class="button" type="submit">INSERT</button>
    </form>
</section>
<section class="get">
    <h3>Get Data</h3>
    <!-- click the button to route to '/get-data', this will load in from mongo -->
    <a id="onLoad" href="/get-data">LOAD DATA</a>
    <div>
        <!-- loop through items -->
        {{# each items }}
            <article class="item">
                <div>Title: {{ this.title }}</div>
                <div>Content: {{ this.content }}</div>
                <div>Author: {{ this.author }}</div>
                <div>ID: {{ this._id }}</div>
            </article>
        <!-- handlebars end loop -->
        {{/each}}
    </div>
</section>
<section class="update">
    <h3>Update Data</h3>
    <!-- update manually by entering in ID and new information -->
    <form action="/update" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <div class="input">
            <label for="title">Title</label>
            <input type="text" id="title" name="title">
        </div>
        <div class="input">
            <label for="content">Content</label>
            <input type="text" id="content" name="content">
        </div>
        <div class="input">
            <label for="author">Author</label>
            <input type="text" id="author" name="author">
        </div>
        <!-- submit the post request -->
        <button class="button" type="submit">UPDATE</button>
    </form>
</section>
</section>
<section class="delete">
    <!-- delete items by copy and paste ID into input, kind of crude but im low on time
    **fix later -->
    <h3>Delete Data</h3>
    <form action="/delete" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <!-- submit the delete request -->
        <button class="deleteBtn" type="submit">DELETE</button>
    </form>
</section>